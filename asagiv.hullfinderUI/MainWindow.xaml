<Window x:Class="asagiv.hullfinderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skia="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:asagiv.hullfinderUI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="1000">
    <DockPanel>

        <Button Margin="10"
                Content="Execute"
                DockPanel.Dock="Top"
                Command="{Binding PlotDataCommand}"/>

        <Button Margin="10"
                Content="Next Step"
                DockPanel.Dock="Top"
                IsEnabled="{Binding NextEnabled}"
                Command="{Binding NextStepCommand}"/>

        <skia:CartesianChart Margin="10"
                             Series="{Binding Series}" />

    </DockPanel>
</Window>
